@model IEnumerable<MVCATP.Models.Player>

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<p>
    @Html.ActionLink("Add player", "New", "Players", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @("Position")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.CountryName)
        </th>
        <th>
             @("Age")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Points)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PlayerID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PlayerSurname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PlayerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Country.CountryName)
    </td>

    <td>
        @((DateTime.Now.Year-item.Birthday.Year).ToString())

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Points)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.PlayerID }, new { @class = "btn btn-primary" })

    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }, new { @class = "btn btn-primary" })

    </td>


</tr>
}

</table>
