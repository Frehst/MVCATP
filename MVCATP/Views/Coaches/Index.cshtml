@model IEnumerable<MVCATP.Models.Coach>

@{
    ViewBag.Title = "Coaches";
}

<h2>Coaches</h2>
<p>
    @Html.ActionLink("Add Coach", "Add", "Coaches", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @("Name Surname")
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CoachName)
            @Html.DisplayFor(modelItem => item.CoachSurname)
        </td>

    </tr>
}

</table>
